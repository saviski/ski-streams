{
  "name": "@ski/streams",
  "version": "0.1.0",
  "description": "Reactive streams but using only native async generators: function*",
  "main": "streams.js",
  "type": "module",
  "module": "streams.js",
  "types": "streams.ts",
  "scripts": {
    "build": "run-s clean build:*",
    "watch": "run-p \"build:* -- --watch\"",
    "clean": "rimraf js .types",
    "build:bundle": "rollup -c",
    "tsc": "tsc",
    "test": "mocha",
    "test:watch": "npm test -- --watch",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saviski/ski-streams.git"
  },
  "keywords": [
    "async",
    "iterable",
    "stream",
    "generator",
    "callbacks",
    "reactive"
  ],
  "author": "saviski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saviski/ski-streams/issues"
  },
  "homepage": "https://github.com/saviski/ski-streams#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testdeck/mocha": "^0.1.2",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "esm": "^3.2.25",
    "mocha": "^9.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "files": [
    ".types",
    "js",
    "src",
    "streams.js",
    "streams.min.js",
    "streams.min.js.map"
  ],
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "tabWidth": 2,
    "proseWrap": "never",
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "singleQuote": true
  },
  "mocha": {
    "require": "ts-node/register",
    "loader": "ts-node/esm",
    "extension": "ts",
    "spec": "test/**/*.test.*"
  }
}